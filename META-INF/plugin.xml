<idea-plugin version="2">
  <name>openGrokSearch</name>
  <description>Searches selected text in openGrok</description>
  <version>2.0</version>
  <vendor>Bartosz Mierzejewski</vendor>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="8000"/>

  <depends>com.intellij.modules.lang</depends>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
        <component>
            <implementation-class>openGrokSearch.OpenGrokSearch</implementation-class>
        </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="openGrokSearch.OpenGrokSearchAction" class="openGrokSearch.OpenGrokSearchAction"
              text="Search in openGrok" description="Search selected text in openGrok">
          <keyboard-shortcut first-keystroke="control alt u" second-keystroke="C" keymap="$default"/>
          <add-to-group group-id="ToolsMenu" anchor="last"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <appStarter implementation="openGrokSearch.OpenGrokSearchAction"/>
  </extensions>
</idea-plugin>